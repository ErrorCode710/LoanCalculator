<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			  Width="230" Height="300"
             x:Class="LoanCalculator.Views.CardCardsView"
			 >


	<Border Background="#f2f2f2" Margin="0,10,10,0" CornerRadius="10">
		<StackPanel Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Image x:Name="carImage"  Width="200"/>
			<TextBlock x:Name="carName" FontSize="16" TextWrapping="Wrap" TextAlignment="Center" FontFamily="{DynamicResource SfPro}" />
			<TextBlock  x:Name="price"  FontSize="12" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center" />
			<Button Content="Add to cart" HorizontalAlignment="Center" />
		</StackPanel>
	</Border>

</UserControl>
