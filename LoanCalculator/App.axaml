<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LoanCalculator.App"
             xmlns:local="using:LoanCalculator"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
	
	<Application.Resources>
		<FontFamily x:Key="SfProDR">avares://LoanCalculator/Assets/Fonts/SF-Pro-Display-Regular.ttf#SF Pro Display</FontFamily>
		<FontFamily x:Key="SfProR">avares://LoanCalculator/Assets/Fonts/SF-Pro-Text-Regular.ttf#SF Pro Display</FontFamily>
		<FontFamily x:Key="SfProB">avares://LoanCalculator/Assets/Fonts/SF-Pro-Display-Bold.ttf#SF Pro Display</FontFamily>
		<StreamGeometry x:Key="chevron_up_regular">M39.6339 31.8839C39.1457 32.372 38.3543 32.372 37.8661 31.8839L24 18.0178L10.1339 31.8839C9.64573 32.372 8.85427 32.372 8.36612 31.8839C7.87796 31.3957 7.87796 30.6043 8.36612 30.1161L23.1161 15.3661C23.6043 14.878 24.3957 14.878 24.8839 15.3661L39.6339 30.1161C40.122 30.6043 40.122 31.3957 39.6339 31.8839Z</StreamGeometry>
	</Application.Resources>
	
    <Application.Styles>
        <FluentTheme />
		<Style Selector="Button.IconButtonStyle" >
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderBrush" Value="Transparent"/>
			<Setter Property="Padding" Value="0"/>
			<Setter Property="Width" Value="60"/>
			<Setter Property="Height" Value="50"/>
			<Setter Property="Focusable" Value="False"/>
		</Style>

	</Application.Styles>
</Application>